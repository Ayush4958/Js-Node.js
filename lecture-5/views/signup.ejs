<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premium Sign Up</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 1rem 0;
        }

        /* Animated background particles */
        body::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 30% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                        radial-gradient(circle at 70% 30%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                        radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
            animation: drift 25s ease-in-out infinite;
            z-index: 0;
        }

        @keyframes drift {
            0%, 100% { transform: translate(-50%, -50%) rotate(0deg) scale(1); }
            33% { transform: translate(-45%, -55%) rotate(120deg) scale(1.1); }
            66% { transform: translate(-55%, -45%) rotate(240deg) scale(0.9); }
        }

        .signup-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 28px;
            padding: 3.5rem 3rem;
            width: 100%;
            max-width: 460px;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 1;
            transform: translateY(-10px);
            animation: fadeInUp 1s ease-out forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .signup-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c, #667eea);
            border-radius: 28px 28px 0 0;
            background-size: 300% 100%;
            animation: rainbowShift 4s ease infinite;
        }

        @keyframes rainbowShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .signup-container::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #667eea, #764ba2, #f093fb, #f5576c);
            border-radius: 30px;
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .signup-container:hover::after {
            opacity: 0.1;
        }

        h1 {
            text-align: center;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            letter-spacing: -0.025em;
            animation: textShimmer 3s ease-in-out infinite;
        }

        @keyframes textShimmer {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .subtitle {
            text-align: center;
            color: #718096;
            font-size: 1rem;
            margin-bottom: 2.5rem;
            font-weight: 400;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
            transform: translateY(20px);
            animation: slideInField 0.6s ease-out forwards;
        }

        .form-group:nth-child(2) { animation-delay: 0.1s; }
        .form-group:nth-child(3) { animation-delay: 0.2s; }
        .form-group:nth-child(4) { animation-delay: 0.3s; }

        @keyframes slideInField {
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        label {
            display: block;
            margin-bottom: 0.6rem;
            color: #4a5568;
            font-weight: 600;
            font-size: 0.95rem;
            letter-spacing: 0.025em;
            position: relative;
        }

        label::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transition: width 0.3s ease;
        }

        .form-group:focus-within label::after {
            width: 100%;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 1.1rem 1.4rem;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            outline: none;
            position: relative;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
            background: rgba(255, 255, 255, 1);
            transform: translateY(-3px) scale(1.02);
        }

        input::placeholder {
            color: #a0aec0;
            font-weight: 400;
            transition: color 0.3s ease;
        }

        input:focus::placeholder {
            color: #cbd5e0;
        }

        /* Input validation styles */
        input:valid:not(:placeholder-shown) {
            border-color: #48bb78;
            background: rgba(72, 187, 120, 0.05);
        }

        input:invalid:not(:placeholder-shown) {
            border-color: #f56565;
            background: rgba(245, 101, 101, 0.05);
        }

        .submit-btn {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            color: white;
            padding: 1.2rem 1.8rem;
            border: none;
            border-radius: 16px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            margin-top: 1.5rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .submit-btn:hover::before {
            left: 100%;
        }

        .submit-btn:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:active {
            transform: translateY(-1px) scale(1.01);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .terms-privacy {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.85rem;
            color: #718096;
            line-height: 1.6;
        }

        .terms-privacy a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

        .terms-privacy a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 1px;
            background: #667eea;
            transition: width 0.3s ease;
        }

        .terms-privacy a:hover {
            color: #764ba2;
        }

        .terms-privacy a:hover::after {
            width: 100%;
        }

        .login-link {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(226, 232, 240, 0.5);
        }

        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            display: inline-block;
        }

        .login-link a:hover {
            background: rgba(102, 126, 234, 0.1);
            transform: translateY(-1px);
        }

        /* Password strength indicator */
        .password-strength {
            height: 4px;
            background: #e2e8f0;
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .password-strength.active {
            opacity: 1;
        }

        .password-strength-fill {
            height: 100%;
            background: linear-gradient(90deg, #f56565, #ed8936, #48bb78);
            border-radius: 2px;
            transition: width 0.3s ease;
            width: 0%;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .signup-container {
                margin: 0.5rem;
                padding: 2.5rem 2rem;
                border-radius: 24px;
                max-width: 400px;
            }

            h1 {
                font-size: 1.9rem;
            }

            input[type="text"],
            input[type="email"],
            input[type="password"] {
                padding: 1rem 1.2rem;
                font-size: 0.95rem;
            }

            .submit-btn {
                padding: 1rem 1.5rem;
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 0.5rem 0;
            }

            .signup-container {
                padding: 2rem 1.5rem;
                border-radius: 20px;
                margin: 0.5rem;
            }

            h1 {
                font-size: 1.6rem;
            }

            .subtitle {
                font-size: 0.9rem;
                margin-bottom: 2rem;
            }

            input[type="text"],
            input[type="email"],
            input[type="password"] {
                padding: 0.9rem 1rem;
                font-size: 0.9rem;
            }

            .submit-btn {
                padding: 0.9rem 1.25rem;
                font-size: 0.95rem;
            }

            .form-group {
                margin-bottom: 1.5rem;
            }
        }

        /* Accessibility improvements */
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Focus states for accessibility */
        input:focus,
        button:focus {
            outline: 3px solid #667eea;
            outline-offset: 2px;
        }

        /* Loading state */
        .submit-btn.loading {
            opacity: 0.8;
            cursor: not-allowed;
            transform: none;
        }

        .submit-btn.loading::after {
            content: '';
            position: absolute;
            width: 18px;
            height: 18px;
            margin: auto;
            border: 2px solid transparent;
            border-top-color: #ffffff;
            border-radius: 50%;
            animation: buttonSpin 1s linear infinite;
        }

        @keyframes buttonSpin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <h1>Create Account</h1>
        <p class="subtitle">Join us today and start your journey</p>
        
        <form action="/user" method="POST" id="signupForm">
            <div class="form-group">
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="user" placeholder="Enter your full name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="mail" placeholder="Enter your email address" required>
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="pass" placeholder="Create a secure password" required>
                <div class="password-strength" id="passwordStrength">
                    <div class="password-strength-fill" id="passwordStrengthFill"></div>
                </div>
            </div>
            
            <button type="submit" class="submit-btn" id="submitBtn">Create Account</button>
        </form>

        <div class="terms-privacy">
            By creating an account, you agree to our 
            <a href="#" onclick="return false;">Terms of Service</a> and 
            <a href="#" onclick="return false;">Privacy Policy</a>
        </div>
        
        <div class="login-link">
            <a href="#" onclick="return false;">Already have an account? Sign In</a>
        </div>
    </div>

    <script>
        // Form submission with loading state
        document.getElementById('signupForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('submitBtn');
            btn.classList.add('loading');
            btn.textContent = 'Creating Account...';
        });

        // Enhanced input animations
        const inputs = document.querySelectorAll('input');
        inputs.forEach((input, index) => {
            // Add stagger animation delay
            input.parentElement.style.animationDelay = (index * 0.1) + 's';
            
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px) scale(1.02)';
                this.style.boxShadow = '0 10px 25px rgba(102, 126, 234, 0.2)';
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0) scale(1)';
                this.style.boxShadow = 'none';
            });

            // Real-time validation feedback
            input.addEventListener('input', function() {
                if (this.checkValidity() && this.value.length > 0) {
                    this.style.borderColor = '#48bb78';
                    this.style.background = 'rgba(72, 187, 120, 0.05)';
                } else if (this.value.length > 0) {
                    this.style.borderColor = '#f56565';
                    this.style.background = 'rgba(245, 101, 101, 0.05)';
                } else {
                    this.style.borderColor = '#e2e8f0';
                    this.style.background = 'rgba(255, 255, 255, 0.9)';
                }
            });
        });

        // Smooth page entrance animation
        window.addEventListener('load', function() {
            document.body.style.animation = 'none';
            document.querySelector('.signup-container').style.animation = 'fadeInUp 0.8s ease-out forwards';
        });
    </script>
</body>
</html>